[user]
	name = jekkos
	email = jeroen.peelaerts@gmail.com
[merge]
	tool = kdiff3
	conflictstyle = diff3
[core]
	editor = vim
[alias]
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
[diff]
    tool = meld
[mergetool "kdiff3"]
    tool = kdiff3
[color]
	ui = auto
[push]
	default = current
	rebase = true
	followtags = true
	autoSetupRemote = true
[pull]
	rebase = true
[fetch]
	prune = true
[rebase]
	updateRefs = true
[rerere]
    enabled = true
